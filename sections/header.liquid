<div class="fixed top-0 left-0 right-0 z-[10000]">
  {% render 'promo-bar' %}
  <header class="site-header">
    <div
      class="site-header__wrapper wrapper flex items-center justify-between z-[10000]"
    >
      <nav>
        <ul class="flex items-center space-x-4 font-sofia font-[600] text-[20px]">
          <li class="flex items-center gap-1">
            Shop
            {{- 'icon-down.svg' | inline_asset_content -}}
            {% render 'dropdown-wrapper' %}
          </li>
          <li class="flex items-center gap-1">
            Discover
            {{- 'icon-down.svg' | inline_asset_content -}}
          </li>
          <li class="flex items-center gap-1">
            <a href="#">BYOB</a>
          </li>
        </ul>
      </nav>
      <a title="Home" href="{{ routes.root_url }}" class="h-[39px] flex justify-center w-full">
        <img
          src="{{ 'logo-lg.webp' | asset_url }}"
          alt="asd"
          width="368"
          class="mx-auto max-h-full logo-header absolute z-[1000] block"
          height="38"
          loading="lazy"
        >
        <img
          src="{{ 'logo-second.avif' | asset_url }}"
          alt="asd"
          width="94"
          class="mx-auto logo-header-second h-[94px] w-[99px] absolute top-[12px] z-[1000] hidden"
          height="88"
          loading="lazy"
        >
      </a>
      <ul class="flex items-center space-x-4">
        <li class="flex items-center gap-1">
          <button class="font-sofia font-[600] text-[20px] whitespace-nowrap">$ USD</button>
          {{- 'icon-down.svg' | inline_asset_content -}}
        </li>
        <li class="flex items-center gap-1">
          <button class="font-sofia font-[600] text-[20px]">
            {{- 'icon-search.svg' | inline_asset_content -}}
            {% comment %} {{- 'icon-close.svg' | inline_asset_content -}} {% endcomment %}
          </button>
        </li>
        <li class="flex items-center gap-1 font-sofia font-[600] text-[20px]">
          <a href="#">
            {{- 'icon-user.svg' | inline_asset_content -}}
          </a>
        </li>
        <li class="flex items-center gap-1">
          <button class="font-sofia font-[600] text-[20px]">
            {{- 'icon-cart.svg' | inline_asset_content -}}
          </button>
        </li>
      </ul>
    </div>
  </header>
  <div class="header-divider width-base"></div>
</div>

