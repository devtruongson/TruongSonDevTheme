<html>
  <head>
    {{ content_for_header }}
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Tailwind CSS code -->
    {{ 'application.css' | asset_url | stylesheet_tag }}
    {{ 'global.css' | asset_url | stylesheet_tag }}
    {{ 'fonts.css' | asset_url | stylesheet_tag }}
    {{ 'header.css' | asset_url | stylesheet_tag }}
    {{ 'product-template.css' | asset_url | stylesheet_tag }}
    {{ 'product.css' | asset_url | stylesheet_tag }}
    {{ 'product-swiper.css' | asset_url | stylesheet_tag }}
    {{ 'product-info.css' | asset_url | stylesheet_tag }}
    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="{{ 'product-swiper.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'product-info.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'header.js' | asset_url }}" defer="defer"></script>
  </head>

  <body>
    {% sections 'header-group' %}
    <main role="main" class="mx-auto main-theme" tabindex="-1">
      {{ content_for_layout }}
    </main>
    {% sections 'footer-group' %}
  </body>
</html>
